<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.myapplication.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/com.example.administrator.myapplication.SlidingMenu"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    zhy:rightPadding="100dp"
    android:id="@+id/id_menu">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <include layout="@layout/layout_menu" />

        <LinearLayout
            android:onClick="toggleMenu2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/qq">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换菜单"
                android:onClick="toggleMenu"/>

        </LinearLayout>
    </LinearLayout>
</com.example.administrator.myapplication.SlidingMenu>